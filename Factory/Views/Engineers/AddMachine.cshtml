@{
  Layout = "_Layout";
}

@model SillyFactory.Models.Engineer

<h2>Add Machine</h2>

<h4>Add machine to this engineer: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" class="btn btn-default"/>
}

<p>@Html.ActionLink("Back to list", "Index")</p>